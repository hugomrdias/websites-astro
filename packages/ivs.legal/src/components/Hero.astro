---
import { getLangFromUrl, useTranslations, translatePath } from '../i18n/utils';
import { Image } from 'astro:assets';
import hero from '../assets/hero-pic.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 text-white overflow-hidden">
  <div class="container mx-auto px-4 py-20 lg:py-32 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-6xl font-serif font-bold leading-tight">
            {t('hero.title')}
            <span class="text-gold-400">{t('hero.title.highlight')}</span>
            {t('hero.title.location')}
          </h1>
          <p class="text-xl text-gray-300 leading-relaxed italic">
            {t('hero.subtitle')}
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href={translatePath(lang, 'contacto')} class="bg-gold-500 hover:bg-gold-600 text-white px-8 py-4 rounded-md font-semibold text-lg transition-all duration-300 transform hover:scale-105 text-center">
            {t('hero.cta.consultation')}
          </a>
          <a href={translatePath(lang, 'sobre')} class="border-2 border-white hover:bg-white hover:text-navy-900 text-white px-8 py-4 rounded-md font-semibold text-lg transition-all duration-300 text-center">
            {t('hero.cta.about')}
          </a>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="relative mx-auto">
        <div class="relative z-10 bg-white rounded-2xl p-8 shadow-2xl max-w-md">
          <Image src={hero} alt="IVS Legal" class="w-full rounded-2xl" loading="eager" fetchpriority="high" layout='constrained' width={384} height={552}/>
          <!-- <div class="text-center mt-6">
            <h3 class="text-lg font-serif font-semibold text-navy-900 italic">{t('hero.quote')}</h3>
            <p class="text-sm text-gold-600 font-medium ">{t('hero.quote.author')}</p>
          </div> -->
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-gold-400 rounded-full opacity-20"></div>
        <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gold-400 rounded-full opacity-10"></div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>