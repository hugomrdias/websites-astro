---
import { getLangFromUrl, useTranslations, translatePath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 bg-gray-50" id="areas-pratica">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-serif font-bold text-navy-900 mb-4">
        {t('practice.title')} <span class="text-gold-600">{t('practice.title.highlight')}</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {t('practice.subtitle')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Direito Civil -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v0H8v0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.civil.title')}</h3>
        <p class="text-gray-600">
          {t('practice.civil.description')}
        </p>
      </div>

      <!-- Direito Comercial -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.commercial.title')}</h3>
        <p class="text-gray-600">
          {t('practice.commercial.description')}
        </p>
      </div>

      <!-- Direito Laboral -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.labor.title')}</h3>
        <p class="text-gray-600">
          {t('practice.labor.description')}
        </p>
      </div>

      <!-- Direito ImobiliÃ¡rio -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.real-estate.title')}</h3>
        <p class="text-gray-600">
          {t('practice.real-estate.description')}
        </p>
      </div>

      <!-- Direito Penal -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.criminal.title')}</h3>
        <p class="text-gray-600">
          {t('practice.criminal.description')}
        </p>
      </div>

      <!-- Direito Fiscal -->
      <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group">
        <div class="w-16 h-16 bg-gold-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gold-200 transition-colors">
          <svg class="w-8 h-8 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold font-serif text-navy-900 mb-4">{t('practice.tax.title')}</h3>
        <p class="text-gray-600">
          {t('practice.tax.description')}
        </p>
      </div>
    </div>
  </div>
</section>