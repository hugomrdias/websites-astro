---
import PageLayout from '@layouts/PageLayout.astro'
import { Image, Picture } from 'astro:assets'
import * as md from '@content/md.md'
import * as mdx from '@content/mdx.mdx'
import lighthouse from '../../images/lighthouse.png'
---

<PageLayout title="Reference" description="HTML Reference">
  <h1 class="animate">HTML Reference</h1>

  <h2>Tables</h2>
  <table>
    <caption> Table with caption </caption>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Jackie</td>
        <td>012345</td>
      </tr>
      <tr>
        <td>Lucy</td>
        <td>112346</td>
      </tr>
